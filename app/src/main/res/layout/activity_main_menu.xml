<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sapientia.ernyoke.labyrinth.MainMenu">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/title"
        android:textSize="40dip"
        android:layout_above="@+id/rolling" />

    <Button
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:text="Легкий"
        android:id="@+id/easyBtn"
        android:layout_above="@+id/mediumBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:text="Средний"
        android:id="@+id/mediumBtn"
        android:layout_above="@+id/hardBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:text="Тяжелый"
        android:id="@+id/hardBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/rolling"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/easyBtn"
        android:layout_centerHorizontal="true" />





</RelativeLayout>
